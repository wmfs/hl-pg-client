{
  "name": "@wmfs/hl-pg-client",
  "version": "0.0.0-semantically-released",
  "description": "Provides a slightly higher level PostgreSQL client, that builds on pg-pool",
  "author": "West Midlands Fire Service",
  "homepage": "https://github.com/wmfs/hl-pg-client#readme",
  "keywords": [
    "tymly",
    "package",
    "postgresql"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmfs/hl-pg-client.git"
  },
  "bugs": {
    "url": "https://github.com/wmfs/hl-pg-client/issues"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "debug": "^3.1.0",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "codecov": "3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "5.2.0",
    "nyc": "12.0.2",
    "semantic-release": "^15.5.2",
    "standard": "11.0.1"
  },
  "scripts": {
    "lint": "standard",
    "test": "nyc mocha && standard",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {"type": "build", "scope":"deps", "release": "minor"},
        {"type": "build", "scope":"deps-dev", "release": "patch"}
      ]
    }
  }
}
